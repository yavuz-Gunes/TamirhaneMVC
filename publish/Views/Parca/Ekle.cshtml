@model TamirhaneMVC.Models.Parca

@{
    ViewData["Title"] = "Yeni Parça";
}

<h2>Yeni Parça Ekle</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Ekle" method="post">
            <div class="form-group">
                <label asp-for="ParcaAdi">Parça Adı</label>
                <input asp-for="ParcaAdi" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Fiyat">Fiyat (TL)</label>
                <input asp-for="Fiyat" class="form-control" type="number" min="0" step="0.01" required />
            </div>
            <div class="form-group">
                <label asp-for="StokMiktari">Başlangıç Stok Miktarı</label>
                <input asp-for="StokMiktari" class="form-control" type="number" min="0" value="0" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div> 