@model List<TamirhaneMVC.Models.Arac>

@{
    ViewData["Title"] = "Araç Listesi";
}

<h2>Araç Listesi</h2>
<a class="btn btn-success mb-3" href="/Arac/Ekle">+ Yeni Araç Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Plaka</th>
            <th>Giriş Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arac in Model)
        {
            <tr>
                <td>@arac.Id</td>
                <td>@arac.Plaka</td>
                <td>@arac.GirişTarihi.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="/Arac/Duzenle/@arac.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/Arac/Sil/@arac.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
