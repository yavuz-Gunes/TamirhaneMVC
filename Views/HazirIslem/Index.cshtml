@model List<TamirhaneMVC.Models.HazirIslem>

@{
    ViewData["Title"] = "Hazır İşlem Listesi";
}

<h2>Hazır İşlem Listesi</h2>
<a class="btn btn-success mb-3" href="/HazirIslem/Ekle">+ Yeni İşlem Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>İşlem Adı</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var islem in Model)
        {
            <tr>
                <td>@islem.Id</td>
                <td>@islem.IslemAdi</td>
                <td>@islem.Fiyat TL</td>
                <td>
                    <a href="/HazirIslem/Duzenle/@islem.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/HazirIslem/Sil/@islem.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
